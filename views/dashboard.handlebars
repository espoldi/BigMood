    <!-- Color Dropdown Trigger -->
    <a class='dropdown-trigger btn' href='#' data-target='dropdown2'>Theme<i class="large material-icons">
        arrow_drop_down</i></a>
    <!-- Color Dropdown Structure -->
    <ul id='dropdown2' class='dropdown-content'>
      <li><a href="#!" class="lightTheme">Light</a></li>
      <li><a href="#!" class="darkTheme">Dark</a></li>
      <li><a href="#!" class="redTheme">Red</a></li>
      <li><a href="#!" class="blueTheme">Blue</a></li>
      <li><a href="#!" class="greenTheme">Green</a></li>
    </ul>
  </ul>

  {{!-- Dashboard Content --}}
  <div class="container" id="dashContent">
    <div class="row">
      <div class="col s12 m12 l12">
        <div class="card center">
          <div class="card-content">
            <h3>Dashboard Statistics</h3>
            <p>{INSERT GRAPH HERE}</p>
          </div>
          <div class="card-tabs">
            <ul class="tabs tabs-fixed-width">
              <li class="tab"><a href="#mood">Average Mood</a></li>
              <li class="tab"><a class="active" href="#activity">Most Used Activity</a></li>
              <li class="tab"><a href="#quote">Latest Quote</a></li>
            </ul>
          </div>
          <div class="card-content grey lighten-4">
            <div id="mood">
              <h4>Average Mood</h4>
            </div>
            <div id="activity">
              <h4>Most Used Activity</h4>
            </div>
            <div id="quote">
              <p id="new-quote">{{quote}}</p>
              <p id="author">{{author}}</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col s12 m12 l12">
        <div class="card">
          <div class="card-content">
            <span class="card-title">All Entries</span>
            <div class="input-field col s6">
              <label>Sort By:</label>
              <select>
                <option value="">Choose your option</option>
                <option value="1">Date</option>
                <option value="2">Mood</option>
                <option value="3">Activity</option>
              </select>

            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col s12 m12 l12">
        <ul class="collapsible">
          <li>
            <div class="collapsible-header"><i class="material-icons">filter_drama</i>First</div>
            <div class="collapsible-body"><span>Lorem ipsum dolor sit amet.</span></div>
          </li>
          <li>
            <div class="collapsible-header"><i class="material-icons">place</i>Second</div>
            <div class="collapsible-body"><span>Lorem ipsum dolor sit amet.</span></div>
          </li>
          <li>
            <div class="collapsible-header"><i class="material-icons">whatshot</i>Third</div>
            <div class="collapsible-body"><span>Lorem ipsum dolor sit amet.</span></div>
          </li>
        </ul>
      </div>
    </div>
  </div>

  {{!-- Modal New Mood Entry --}}
  <button class="btn indigo hoverable modal-trigger" data-target="newEntry" id="modalButton"><i
      class="material-icons">add</i></button>

  <div class="modal" id="newEntry">
    <div class="modal-content">
      <h3>How are you feeling?</h3>
      <div class="divider"></div>
      <h3>What are you doing?</h3>
      <div class="divider"></div>
      <div class="modal-footer">
        <h2>Preview</h2>
        <button class="btn green">Submit</button>
        <button class="btn red modal-close">Cancel</button>
      </div>

    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/darkmode-js@1.5.7/lib/darkmode-js.min.js"></script>
  <script>
    function addDarkmodeWidget() {
      new Darkmode().showWidget();
    }
    window.addEventListener('load', addDarkmodeWidget);
  </script>

  {{!-- Link to Dashboard JS --}}
  <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script src="./js/dashboard.js"></script>
</body>
